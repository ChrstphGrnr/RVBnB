<%= form_for @trip do |f|%>

<%= f.hidden_field :rv_id, value: @trip.rv_id %>
<%= f.hidden_field :user_id, value: current_user.id %>

<%=  f.label :name%>
<%=  f.text_field :name%>

<%= f.label :guests %>
<%= f.number_field :guests %>

<%= f.label :start_date %>
<%= f.date_field :start_date %>

<%= f.label :end_date %>
<%= f.date_field :end_date %>

<%= f.submit "Book this trip" %>

<% end %>




